/* pages/purchaseSuccessful/purchaseSuccessful.wxss */

.header {
    background-color: #00d090;
    width: 100%;
    height: 160rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    color: white;
    font-weight: 500;
    font-size: 1.6rem;
}

.body {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.big-desc {
    font-weight: 400;
    font-size: 1.2rem;
    margin: 1rem 0 0.5rem 0;
    text-align: center;
}

.btn-copy {
    border: 1rpx solid #f0fcf8;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    color: #00d090;
    background-color: #f0fcf8;
    font-weight: 600;
    font-size: 0.9rem;
    border-radius: 10000rpx;
    margin-bottom: 0.3rem;
    height: 60rpx;
}

.small-desc {
    font-family: 'PingFang SC';
    font-weight: bold;
    color: rgba(136, 136, 136, 1);
    font-size: 0.8rem;
    margin: 0.5rem 0;
    margin-bottom: 0.8rem;
}

.center-box {
    background: rgba(255, 255, 255, 1);
    border: 4rpx solid rgba(0, 208, 144, 1);
    border-radius: 26px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 600rpx;
    width: 90%;
    margin: 0 auto;
    margin-top: 1rem;
}

.box-image {
    width: 50%;
}

.box-text {
    font-size: 1rem;
    font-family: 'PingFang SC';
    font-weight: bold;
    color: rgba(0, 208, 144, 1);
    margin-top: 0.8rem;
}

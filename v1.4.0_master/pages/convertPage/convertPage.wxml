<!--pages/convertPage/convertPage.wxml-->
<!-- 转化页模板 -->
<view style="width: 100%;">
    <view style="display: {{ isLogin? 'none' : 'flex' }}" class="login-body">
        <!-- 未获取到手机号码 -->
        <view>请先进行登录</view>
        <button open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber" class="btn btn-login">登录</button>
    </view>
    <view style="display: {{ isLogin? 'flex' : 'none' }};" class="page">
        <view class="body">
            <view class="head">
                <image src="{{courseInfo.headPicList[0]}}" mode="widthFix"></image>
            </view>
            <view class="info-basic">
                <view class="left">
                    <view class="left-left">
                        <view class="left-left-top">限时秒杀：</view>
                        <view class="left-left-bottom">原价：
                            <text class="line-through">{{courseInfo.originPrice}} </text>元</view>
                    </view>
                    <view class="left-right">
                        <view class="left-right-price">{{courseInfo.trialPrice}}</view>
                        <view class="left-right-tag"> 元</view>
                    </view>
                </view>
                <view class="right">
                    <view class="right-top">距优惠结束还剩：</view>
                    <view class="right-bottom">{{countDownClock}}</view>
                </view>
            </view>

            <view class="info-details">
                <view class="info-details-title">{{courseInfo.title}}</view>
                <view class="info-details-desc">{{courseInfo.detail}}</view>
            </view>

            <view class="info-special" bindtap="showModal2">
                <view class="special-item">
                    <image src="https://web.xuexiyuansu.com/images/miniprogramimages/-905189877_1583312675335.png" mode="widthFix"></image>
                    优质课程安心购
                </view>
                <view class="special-item">
                    <image src="https://web.xuexiyuansu.com/images/miniprogramimages/-905189877_1583312675335.png" mode="widthFix"></image>
                    名师授课
                </view>
                <view class="special-item">
                    <image src="https://web.xuexiyuansu.com/images/miniprogramimages/-905189877_1583312675335.png" mode="widthFix"></image>
                    1对1答疑
                </view>
                <view class="special-item">
                    <image src="https://web.xuexiyuansu.com/images/miniprogramimages/-905189877_1583312675335.png" mode="widthFix"></image>
                    无限回放
                </view>
                <image src="https://web.xuexiyuansu.com/images/miniprogramimages/-1280236461_1583312774966.png" mode="widthFix"></image>
            </view>
            <view class="imgs">
                <image wx:for="{{courseInfo.courseDetailPicList}}" wx:key="index" wx:for-item="img" src="{{img}}" mode="widthFix" bindtap=""></image>
            </view>
        </view>
        <view class="bottom-bar1">
            <view class="left">
                <view class="bottom-trial-price">￥{{courseInfo.trialPrice}}</view>
                <view class="bottom-original-price line-through">{{courseInfo.originPrice}}</view>
            </view>
            <button class="btn-sign" bindtap="showModal">立即报名</button>
        </view>
    </view>
</view>
<!-- 半屏选择课程框 -->
<view class="modal-hide1" bindtap="hideModal" catchtouchmove="preventTouchMove" wx:if="{{showModal}}"></view>
<view class="modal-dialog1" wx:if="{{showModal}}">
    <view class="course-header">
        <view class="title">课程</view>
        <image src="https://web.xuexiyuansu.com/images/miniprogramimages/-818825964_1583381458080.png" mode="widthFix" bindtap="hideModal"></image>
    </view>
    <scroll-view scroll-y="true" style="height: 50vh;">
        <view class="course-selection">
            <button wx:for="{{courseInfo.courseGradeList[0].courseList}}" wx:key="index" wx:for-index="index" wx:for-item="item" data-courseId="{{item.courseId}}" data-trialPrice="{{courseInfo.trialPrice}}" bindtap="navigateToOrder" disabled="{{!item.canUse}}" class="{{item.canUse ? 'active' : 'disabled'}}">{{item.courseName}}({{item.dateRange}})</button>
        </view>
    </scroll-view>
</view>

<view class="modal-hide1" bindtap="hideModal2" catchtouchmove="preventTouchMove" wx:if="{{showBuyModal}}"></view>
<view class="modal-buy" wx:if="{{showBuyModal}}">
    <view class="buy-header">
        <view class="title">优质课程安心购</view>
        <image src="https://web.xuexiyuansu.com/images/miniprogramimages/-818825964_1583381458080.png" mode="widthFix" bindtap="hideModal2"></image>
    </view>
    <view class="buy-item">
        <view class="title-wrapper">
            <image src="https://web.xuexiyuansu.com/images/miniprogramimages/684208302_1583381520919.png" mode="widthFix"></image>
            <text class="title">名师授课</text>
        </view>
        <view class="content">出身名校、教学经验丰富的顶尖名师在线传授高分秘诀，优质师资有保障。</view>
    </view>
    <view class="buy-item">
        <view class="title-wrapper">
            <image src="https://web.xuexiyuansu.com/images/miniprogramimages/684208302_1583381520919.png" mode="widthFix"></image>
            <text class="title">1对1答疑</text>
        </view>
        <view class="content">班主任课后1对1跟踪辅导，及时答疑，全方位帮助孩子吃透每个知识点。</view>
    </view>
    <view class="buy-item">
        <view class="title-wrapper">
            <image src="https://web.xuexiyuansu.com/images/miniprogramimages/684208302_1583381520919.png" mode="widthFix"></image>
            <text class="title">无限回放</text>
        </view>
        <view class="content">在线直播课程结束后可无限次回放课程，无需担心错过直播时间表和遗漏课程内容。</view>
    </view>
</view>
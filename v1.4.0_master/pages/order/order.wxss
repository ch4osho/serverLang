/* pages/order/order.wxss */

.header {
    background-color: white;
    width: 100%;
    height: 200rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    color: black;
    font-weight: 600;
}

.left, .right {
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.remaining-num {
    font-family: 'PingFang SC';
    font-weight: bold;
    color: rgba(0, 208, 144, 1);
    font-size: 1.3rem;
}

.remaining-tip {
    font-family: 'PingFang SC';
    font-weight: bold;
    color: rgba(53, 53, 53, 1);
    font-size: 0.9rem;
}

.section .title {
    font-size: 1.2rem;
    font-family: 'PingFang SC';
    font-weight: bold;
    color: rgba(0, 208, 144, 1);
    margin: 30rpx 0 20rpx 0;
}

.section .details .title {
    font-family: 'PingFang SC';
    font-weight: bold;
    color: rgba(53, 53, 53, 1);
    font-size: 1.1rem;
}

.section .details .time {
    font-size: 0.9rem;
    font-family: 'PingFang SC';
    font-weight: 300;
    color: rgba(197, 197, 197, 1);
}

.section .details .title .sub-title {
    font-family: 'PingFang SC';
    font-weight: bold;
    color: rgba(53, 53, 53, 1);
    font-size: 1.1rem;
}

.bottom-bar .left {
    width: 60%;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
    font-weight: 500;
}

.bottom-bar .right {
    width: 40%;
}

.bottom-bar > .right > button {
    width: 90%;
    height: 70rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    color: whtie;
    font-size: 0.95rem;
    font-weight: 400;
}

.bottom-bar .left {
    font-family: 'PingFang SC';
    font-weight: 500;
    color: rgba(53, 53, 53, 1);
}

.price {
    font-family: 'PingFang SC';
    font-weight: 800;
    color: rgba(0, 208, 144, 1);
}

.modal {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,.5);
    overflow: hidden;
    z-index: 900;
}

.modal-dialog {
    z-index: 901;
    height: 65vh;
    width: 70%;
    position: fixed;
    top: 15%;
    left: 0;
    right: 0;
    margin: 0 auto;
    /* background-color: transparent; */
}

.modal-dialog .image image {
    width: 100%;
    position: relative;
}


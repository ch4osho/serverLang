.container {
    margin-bottom: 100rpx;
}

.header {
    display: flex;
    flex-direction: row;
    justify-content: cneter;
    align-items: center;
    height: 300rpx;
}

.header-image {
    flex: 1;
    height: 300rpx;
}

.parent-guide {
    position: fixed;
    top: 330rpx;
    height: 70rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-top-left-radius: 10000rpx;
    border-bottom-left-radius: 10000rpx;
    border-right: none;
    text-align: right;
    background-color: #f0fcf8;
    z-index: 4;
    font-family: 'PingFang SC';
    font-weight: 500;
    color: var(--theme);
}

.parent-guide > image {
    width: 50rpx;
    margin-right: 20rpx;
}

.upward {
    width: 220rpx;
    right: 0;
}

.downward {
    right: -20rpx;
    width: 90rpx;
}

/* 头图和选项卡中间的字 */

.course {
    width: 100%;
    height: 60rpx;
    margin-top: 40rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.course > text {
    font-size: 50rpx;
    font-family: 'PingFang SC';
    font-weight: 600;
    color: rgba(53, 53, 53, 1);
}

/* 选项卡 */

.swiper-tab {
    width: 100%;
    text-align: center;
    height: 70rpx;
    padding-bottom: 20rpx;
    display: flex;
    flex-flow: row;
    justify-content: center;
    align-items: center;
    border-bottom: none;
}

.swiper-tab-item {
    color: #888;
    font-size: 0.9rem;
    width: 25%;
    font-weight: 400;
}

.pb100 {
    padding-bottom: 100rpx;
}

.pb100.fringe-screen{
    padding-bottom: 130rpx;
}

.active {
    color: var(--theme);
    border-bottom: none;
    position: relative;
    font-weight: 900;
}

.active::after {
    content: '';
    position: absolute;
    bottom: 12%;
    left: 35%;
    right: 35%;
    margin: 0 auto;
    height: 6rpx;
    background-color: var(--theme);
    border-radius: 100000rpx;
}

.swiper {
    text-align: center;
}

.swiper image {
    width: 94%;
    margin: 0 auto;
}

/* 测试用 */

.pretender {
    height: 100rpx;
    width: 90%;
    border-radius: 50rpx;
    border: 1px solid #000;
    font-weight: 300;
    margin: 100rpx auto;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}
/* pages/purchaseSuccessful/purchaseSuccessful.wxss */
.wrap{
    background-color: #FFFFFF;
    height: 100vh;
    padding-bottom: 100rpx;
    /* height: calc(100vh - 100rpx); */
}

.wrap-full{
    /* height: 100vh; */
    padding-bottom: 0rpx;
}

.fringe-screen-wrap{
    /* height: calc(100vh - 130rpx) */
    padding-bottom: 130rpx;
}

.header {
    background-color: var(--theme);
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    color: var(--white);
    font-weight: 500;
    font-size: 1.2rem;
    padding: 40rpx 0;
}

.body {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.big-desc {
    font-weight: 400;
    font-size: 1.2rem;
    margin: .5rem 0;
    text-align: center;
    font-weight: bold;
    width: 80%;
}

.big-desc.red{
    color: #FF2A20
}

.btn-copy {
    border: 1rpx solid hsl(160, 67%, 96%);
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    color:  var(--theme);
    background-color: #f0fcf8;
    font-weight: 600;
    font-size: 0.9rem;
    padding: 10rpx 30rpx;
    border-radius: 100rpx;
    margin-bottom: 0.3rem;
    height: 60rpx;
}

.small-desc {
    font-family: 'PingFang SC';
    font-weight: bold;
    color: rgba(136, 136, 136, 1);
    font-size: 0.8rem;
    margin: .5rem 0 .8rem 0;
}

.small-desc.red{
    color: red;
    margin-top: 0;
    margin-bottom: .5rem;
    font-size: .7rem;
}

.center-box {
    background: var(--white);
    border: 4rpx solid var(--theme);
    border-radius: 26px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 600rpx;
    width: 90%;
    margin: 0 auto;
    /* margin-top: 1rem; */
}

.box-image {
    width: 50%;
}

.box-text {
    font-size: 1rem;
    font-family: 'PingFang SC';
    font-weight: bold;
    color: var(--theme);
    margin-top: 0.8rem;
}

.center-box .list-item{
    width: 100%;
    justify-content: space-around;
    display: flex;
    margin-top: 20rpx;
}

.center-box .list-item .address{
    border-radius: 25rpx;
    background-color: #00D090;
    color: var(--white);
    padding: 10rpx 30rpx;
    font-size: 1rem;
    margin-bottom: 30rpx;
    line-height: 1.5rem;
}

.center-box .list-item .address .icon{
    font-size: 1.5rem;
}

.btn{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 90%;
    border-radius: 50rpx;
    padding: 20rpx 0;
    margin-top: 40rpx;
    background-color: #ededed;
}

.btn.active{
    color: white;
    background-color: var(--theme);
}

.center-box .list-item .rgion-picker{
    flex: 1;
}

.center-box .list-item.tips{
    justify-content: flex-start;
    color: #888888;
}

.center-box .list-item .label{
    min-width: 150rpx;
    padding: 20rpx 0 20rpx 40rpx;
}

.center-box .list-item .input-container{
    flex: 1;
    border-bottom: 1px solid #ededed;
    padding: 20rpx 0 0 0;
    margin: 0 40rpx;
    display: flex;
}

.center-box .list-item .input-container input{
    width: 100%;
}

.center-box .list-item .input-container textarea{
    width: 100%;
    line-height: 1rem;
    max-height: 4rem;
}

.border-container{
    margin-top: 30rpx;
    width: 90%;
    border: 2px solid var(--theme);
    border-radius: 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    padding:  30rpx 0 70rpx 0;
}

.avatar-container{
    width: 70%;
    display: flex;
    justify-content: space-around;
    margin-bottom: 20rpx;
    align-items: center;
}

.avatar-container .plus{
    color: #666666;
    font-size: 2rem;
}



.avatar-caps{
    position: relative;
    width: 150rpx;
    height: 150rpx;

}

.avatar{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    position: relative;
    overflow: hidden;
    border: 1px solid #FECA01;
}

.avatar image{
    width: 100%;
    height: 100%;
}

.avatar-caps .captain{
    position: absolute;
    left: 50%;
    bottom: 0;
    transform: translate(-50%, 0);
    background: #FECA01;
    color: var(--white);
    padding: 0 10rpx;
    white-space: nowrap;
    text-align: center;
    border-radius: 30rpx;
    width: 80%;
}

.avatar .label{
    text-align: center;
}

.big-btn{
    width: 80%;
    border-radius: 20rpx;
    color: var(--white);
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 20rpx;
    font-size: 1.1rem;
}

.big-btn.copy-wx{
    background: #00D090;
    
}

.big-btn.share-wx{
    background: #FECA01;
}


.big-label{
    width: 100%;
    margin-bottom: 20rpx;
    font-size: 1.1rem;
    display: flex;
    justify-content: center;
    color: #666666
}


.purchase-success{
    position: absolute;
    height: 130rpx;
    width: 130rpx;
    right: 0;
    top: 0;
    border-radius: 50%;
    background: #FECA01;
    transform: translate(30%, -30%);
    padding: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 40rpx;
    line-height: 40rpx;
    color: var(--white);
    text-align: center;
    font-weight: bold;
}


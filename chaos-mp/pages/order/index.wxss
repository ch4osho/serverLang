/* pages/order/order.wxss */

.header {
    background-color: white;
    width: 100%;
    height: 200rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    color: black;
    font-weight: 600;
}

.header .left,
.header .right {
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.remaining-num {
    font-family: 'PingFang SC';
    font-weight: bold;
    color: var(--theme);
    font-size: 1.3rem;
}

.remaining-tip {
    font-family: 'PingFang SC';
    font-weight: bold;
    color: rgba(53, 53, 53, 1);
    font-size: 0.9rem;
}

.section .title {
    font-size: 1.2rem;
    font-family: 'PingFang SC';
    font-weight: bold;
    color: var(--theme);
    margin: 30rpx 0 20rpx 0;
}

.section .details .title {
    font-family: 'PingFang SC';
    color: #353535;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-weight: bold;
}

.section .details .title .left {
    font-size: 1.1rem;
    max-width: 80%;
}

.section .details .title .right {
    color: #ff7c77;
    max-width: 20%;
}

.section .details .time {
    font-size: 0.9rem;
    font-family: 'PingFang SC';
    font-weight: 300;
    color: rgba(197, 197, 197, 1);
}

.section .details .title .sub-title {
    font-family: 'PingFang SC';
    font-weight: bold;
    color: rgba(53, 53, 53, 1);
    font-size: 1.1rem;
}

.content-wrapper {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.content-wrapper .material-content {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
    margin-bottom: 20rpx;
}

.material-content image {
    max-width: 30%;
}

.material-content .text {
    font-family: 'PingFang SC';
    font-weight: bold;
    color: rgba(53, 53, 53, 1);
    font-size: 1.1rem;
    padding-left: 50rpx;
    max-width: 60%;
}

.material .tool-tip {
    font-family: 'PingFang SC';
    font-weight: bold;
    color: rgba(197, 197, 197, 1);
    font-size: 0.9rem;
    margin-top: 15rpx;
}

.bottom-bar .left {
    width: 60%;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
    font-weight: 500;
}

.bottom-bar .right {
    width: 40%;
}

.bottom-bar.fringe-screen{
    padding-bottom: 30rpx;
}

.bottom-bar > .right > button {
    width: 90%;
    height: 70rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    color: whtie;
    font-size: 0.95rem;
    font-weight: 400;
}

.bottom-bar .left {
    font-family: 'PingFang SC';
    font-weight: 500;
    color: rgba(53, 53, 53, 1);
}

.price {
    font-family: 'PingFang SC';
    font-weight: 800;
    color: var(--theme);
}

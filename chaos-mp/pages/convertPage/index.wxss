.page {
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    padding-bottom: 100rpx;
}

.page.fringe-screen{
    padding-bottom: 140rpx;
}

.body {
    width: 100%;
}

.info-basic {
    background-image: url('https://web.xuexiyuansu.com/images/miniprogramimages/-1201393982_1585814949922.0.png');
    background-size: cover;
    position: relative;
    margin-top: -20px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 10rpx;
}

.info-basic image {
    width: 200rpx;
    margin-top: 15rpx;
    margin-left: 15rpx;
}

.info-basic .basic-left {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    color: #e41224;
}

.basic-left .left-left {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.left-left .left-left-price {
    font-size: 0.8rem;

    font-weight: 600;
    font-family: 'Source Han Sans CN';
}

.basic-left .left-right {
    line-height: 80rpx;
    vertical-align: bottom;
    margin-top: 40rpx;
    margin-left: 20rpx;
}

.left-right .left-right-tag {
    font-size: 0.9rem;
    font-family: 'Source Han Sans CN';
    font-weight: 500;
    display: inline-block;
}

.left-right .left-right-price {
    font-family: 'Source Han Sans CN';
    font-weight: 800;
    font-size: 2.1rem;
    display: inline-block;
}

.info-basic .basic-right {
    color: white;
    margin-right: 20rpx;
    margin-top: 30rpx;
    font-size: 0.8rem;
}

.basic-right .right-top {
    font-family: Source Han Sans CN;
    font-weight: 400;
}

.basic-right .right-bottom {
    font-family: Source Han Sans CN;
    font-weight: 400;
}

.basic-right2 {
    color: white;
    margin-right: 20rpx;
    margin-top: 30rpx;
    font-size: 1.2rem;
}


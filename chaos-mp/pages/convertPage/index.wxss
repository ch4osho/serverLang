.info-details {
    height: 140rpx;
    background-color: white;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    padding-left: 30rpx;
    padding-top: 20rpx;
}

.info-details .info-details-row {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.info-details .info-details-row .tag {
    border: 2rpx solid rgba(253, 163, 2, 1);
    border-radius: 10000rpx;
    font-family: 'Source Han Sans CN';
    font-weight: bold;
    color: rgba(253, 166, 2, 1);
    background-color: white;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    min-width: 100rpx;
    padding: 0 10rpx;
    height: 40rpx;
    margin-right: 10rpx;
}

.info-details .info-details-title {
    font-family: 'Source Han Sans CN';
    font-weight: bold;
    color: rgba(53, 53, 53, 1);
    font-size: 1.3rem;
}

.info-details .info-details-desc {
    font-family: 'Source Han Sans CN';
    font-weight: 500;
    color: rgba(100, 100, 100, 1);
    font-size: 0.8rem;
}

.info-special {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    background: rgba(255, 250, 233, 1);
    position: relative;
    height: 70rpx;
}

.info-special > image {
    width: 14rpx;
    position: absolute;
    top: 0;
    bottom: 0;
    margin: auto 0;
    right: 10rpx;
}

.info-special > .special-item {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    font-weight: 300;
    font-size: 0.7rem;
    margin: 0 10rpx;
    font-family: 'Source Han Sans CN';
}

.info-special > .special-item:first-child {
    padding-left: 20rpx;
}

.info-special > .special-item > image {
    width: 30rpx;
    margin-right: 10rpx;
}

image {
    width: 100%;
}

.bottom-bar1 {
    position: fixed;
    width: 100%;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100rpx;
    z-index: 30;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    text-align: right;
    background-color: white;
}

.bottom-bar1.fringe-screen{
    padding-bottom: 30rpx;
}

.bottom-trial-price {
    font-family: 'Source Han Sans CN';
    font-weight: 500;
    color: rgba(255, 67, 59, 1);
    font-size: 1.6rem;
    margin-right: 30rpx;
}

.bottom-original-price {
    color: rgba(197, 197, 197, 1);
    font-family: 'Source Han Sans CN';
    font-weight: 500;
    font-size: 0.9rem;
    margin-right: 50rpx;
}

.bottom-bar1 .left {
    width: 60%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
}

.btn-sign {
    border-radius: 50px;

    width: 35%;
    height: 60rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    font-size: 0.95rem;
    font-weight: 400;
}

.btn-sign.active {
    background: linear-gradient(
        90deg,
        rgba(255, 96, 0, 1) 0%,
        rgba(255, 23, 17, 1) 100%
    );
    color: white;
}

.btn-sign.disabled {
    background: rgba(249, 249, 249, 1);
    border: 2rpx solid rgba(136, 136, 136, 1);
    color: rgba(136, 136, 136, 1);
}

/* 模态窗口 */

.modal-hide1 {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 99;
    color: #fff;
}

.modal-dialog1 {
    z-index: 100;
    width: 100%;
    height: 80vh;
    left: 0;
    right: 0;
    bottom: 0;
    margin: 0 auto;
    position: fixed;
    background-color: white;
    border-top-left-radius: 30rpx;
    border-top-right-radius: 30rpx;
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
}

.course-header {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
    height: 6vh;
    width: 100%;
    border-top-left-radius: 30rpx;
    border-top-right-radius: 30rpx;
}

.course-header > image {
    width: 30rpx;
    margin-right: 30rpx;
}

.course-selection > button:last-child {
    margin-bottom: 30rpx;
}

.select-title {
    font-family: 'PingFang SC';
    font-weight: bold;
    color: rgba(53, 53, 53, 1);
    text-align: center;
    font-size: 40rpx;
    margin-bottom: 20rpx;
}

.grade-select {
    margin-bottom: 40rpx;
}

.grade-wrapper {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
}

.grade-wrapper > button {
    border-radius: 60px;
    height: 80rpx;
    width: 140rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    font-size: 0.7rem;
}

.course-selection button.selected {
    background: linear-gradient(
        90deg,
        rgba(255, 95, 1, 1) 0%,
        rgba(255, 66, 59, 1) 100%
    );
    color: #ffffff;
}

.course-selection button.active {
    background: rgba(255, 246, 246, 1);
    border: 2px solid rgba(255, 66, 59, 1);
    color: #ff423b;
}

.course-selection button.disabled {
    background: rgba(249, 249, 249, 1);
    border: 2px solid rgba(136, 136, 136, 1);
    color: rgba(136, 136, 136, 1);
}

.course-wrapper {
    display: flex;
    flex-direction: column;
}

.course-wrapper > button {
    width: 600rpx;
    height: 100rpx;
    margin-bottom: 40rpx;
    border-radius: 10000rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    font-family: 'Source Han Sans CN';
    font-weight: 400;
    font-size: 0.8rem;
}

.course-footer {
    height: 10vh;
    background-color: white;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 100%;
    box-shadow: 0 -4rpx 3rpx 0rpx rgba(193, 193, 193, 0.2);
}

.course-footer > button {
    color: #ffffff;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    height: 80rpx;
    width: 600rpx;
    font-family: 'Source Han Sans CN';
    font-weight: 400;
    font-size: 1.1rem;
    background: var(--theme);
    border-radius: 10000rpx;
}

/* 这里是安心购窗口的  */

.modal-buy {
    z-index: 100;
    width: 80%;
    height: 800rpx;
    left: 30rpx;
    right: 30rpx;
    top: 180rpx;
    margin: 0 auto;
    position: fixed;
    background-color: white;
    border-radius: 15rpx;
}

.buy-header {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    position: relative;
    z-index: 101;
    margin: 10rpx 0;
}

.buy-header > .title {
    font-size: 1.3rem;
    font-family: 'PingFang SC';
    font-weight: 600;
    color: rgba(53, 53, 53, 1);
    margin: 30rpx 0;
}

.buy-header > image {
    position: absolute;
    top: 0;
    bottom: 0;
    right: 30rpx;
    margin: auto 0;
    width: 25rpx;
}

.buy-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    margin-bottom: 30rpx;
}

.buy-item > .title-wrapper {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    margin-left: 60rpx;
}

.buy-item > .title-wrapper > .title {
    font-family: 'PingFang SC';
    font-weight: bold;
    color: rgba(53, 53, 53, 1);
    font-size: 1.1rem;
}

.buy-item > .title-wrapper > image {
    width: 32rpx;
    margin-right: 30rpx;
}

.buy-item > .content {
    margin: 0 auto;
    width: 60%;
    font-family: 'PingFang SC';
    font-weight: 300;
    color: rgba(136, 136, 136, 1);
    font-size: 0.8rem;
}
